{
  "name": "@phantom/core",
  "version": "0.1.0",
  "description": "Central hub for the Phantom system - design system, documentation, and configuration",
  "type": "module",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./hooks": {
      "types": "./dist/types/hooks/index.d.ts",
      "import": "./dist/esm/hooks/index.js"
    },
    "./css": {
      "import": "./dist/css/styles.css"
    },
    "./styles.css": "./dist/css/styles.css",
    "./global.css": "./dist/css/global.css",
    "./tailwind.css": "./dist/css/tailwind.css",
    "./tailwind": "./dist/config/tailwind.preset.mjs",
    "./tokens": {
      "import": "./dist/esm/tokens/index.js",
      "types": "./dist/types/tokens/index.d.ts"
    },
    "./tokens/colors.css": "./dist/css/tokens/colors.css",
    "./tokens/typography.css": "./dist/css/tokens/typography.css",
    "./tokens/spacing.css": "./dist/css/tokens/spacing.css",
    "./tokens/shadows.css": "./dist/css/tokens/shadows.css",
    "./tokens/breakpoints.css": "./dist/css/tokens/breakpoints.css",
    "./components": {
      "import": "./dist/esm/components/index.js",
      "types": "./dist/types/components/index.d.ts"
    },
    "./components/base": {
      "import": "./dist/esm/components/base/index.js",
      "types": "./dist/types/components/base/index.d.ts"
    },
    "./components/composite": {
      "import": "./dist/esm/components/composite/index.js",
      "types": "./dist/types/components/composite/index.d.ts"
    },
    "./components/layout": {
      "import": "./dist/esm/components/layout/index.js",
      "types": "./dist/types/components/layout/index.d.ts"
    },
    "./components/navigation": {
      "import": "./dist/esm/components/navigation/index.js",
      "types": "./dist/types/components/navigation/index.d.ts"
    },
    "./components/animation": {
      "import": "./dist/esm/components/animation/index.js",
      "types": "./dist/types/components/animation/index.d.ts"
    },
    "./themes": {
      "import": "./dist/esm/themes/index.js",
      "types": "./dist/types/themes/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vitepress dev docs --port 3001",
    "storybook": "storybook dev -p 6006",
    "dev:container": "echo 'Use VS Code Remote-Containers extension to open in container'",
    "verify-build": "node scripts/verify-build.js",
    "build": "rimraf dist && node scripts/build-formats.js && node scripts/build-tokens.js && pnpm run verify-build",
    "build:tokens": "node scripts/build-tokens.js",
    "build:css": "tailwindcss -c ./src/styles/tailwind.config.mjs -i ./src/styles/tailwind.css -o ./dist/css/styles.css --minify && cpy ./src/styles/global.css ./dist/css && cpy ./config/tailwind.preset.mjs ./dist/config",
    "build:docs": "vitepress build docs",
    "build:watch:ts": "concurrently \"tsc --project tsconfig.json --watch --preserveWatchOutput\" \"tsc --project tsconfig.types.json --watch --preserveWatchOutput\"",
    "build:watch:css": "tailwindcss -c ./src/styles/tailwind.config.mjs -i ./src/styles/tailwind.css -o ./dist/css/styles.css --watch",
    "build:watch:assets": "chokidar './src/styles/global.css' './config/tailwind.preset.mjs' -c \"cpy ./src/styles/global.css ./dist/css && cpy ./config/tailwind.preset.mjs ./dist/config\"",
    "dev:watch": "pnpm run build && concurrently \"pnpm:build:watch:*\"",
    "watch": "pnpm run build && concurrently \"pnpm:build:watch:*\"",
    "watch:tokens": "chokidar './src/tokens/**/*.css' -c 'node scripts/build-tokens.js'",
    "watch:all": "pnpm run build && concurrently \"pnpm:build:watch:*\" \"pnpm run watch:tokens\"",
    "lint": "eslint . --ext .ts,.tsx --config ./config/eslint.config.js && stylelint --config ./stylelint.config.mjs \"**/*.{css,scss}\"",
    "lint:fix": "eslint . --ext .ts,.tsx --config ./config/eslint.config.js --fix && stylelint --config ./stylelint.config.mjs \"**/*.{css,scss}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,yml,yaml}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,yml,yaml}\" --ignore-path .gitignore",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "setup": "sh ./scripts/setup-dev.sh",
    "clean": "rimraf dist && rimraf build && rimraf coverage && rimraf .vitepress/cache",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm run test && pnpm run build && pnpm publish",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pabloagn/phantom.git",
    "directory": "packages/phantom-core"
  },
  "keywords": [
    "phantom",
    "documentation",
    "typescript",
    "react",
    "tailwindcss"
  ],
  "author": "Phantom Team <main@pabloagn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pabloagn/phantom/issues"
  },
  "homepage": "https://github.com/pabloagn/phantom#readme",
  "dependencies": {
    "@floating-ui/react": "^0.27.8",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "framer-motion": "^12.8.0",
    "lucide-react": "^0.503.0",
    "next": "^14.1.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^18.2.55",
    "react-dom": "^18.2.19",
    "rehype-pretty-code": "^0.14.1",
    "shiki": "^3.3.0",
    "tailwindcss": "^3.4.4",
    "three": "^0.176.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-coverage": "^0.0.9",
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.6.17",
    "@storybook/nextjs": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^7.6.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/d3": "^7.4.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.10",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/scheduler": "0.26.0",
    "@types/three": "^0.175.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^10.9.6",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.6.15",
    "glob": "^11.0.1",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "react-mermaid2": "0.1.4",
    "rehype-slug": "^5.0.0",
    "remark-toc": "9.0.0",
    "rimraf": "^6.0.1",
    "storybook": "^7.6.17",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vitepress": "^1.2.3",
    "vue": "^3.4.31"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
