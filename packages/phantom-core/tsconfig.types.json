{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    "./phantom-core.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist/esm",
    "build",
    "coverage",
    ".turbo",
    "scripts",
    "config"
  ]
}
