// packages/phantom-core/tsconfig.json

{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "rootDir": "src",
      "outDir": "dist/esm",
      "declaration": true,
      "declarationDir": "dist/types",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "src",
      "composite": true,
      "noEmit": false,
      "emitDeclarationOnly": false,
      "noEmitOnError": false,
      "allowJs": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.mjs",
      "src/types/**/*.d.ts",
      "./phantom-core.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "dist/**",
      "dist/esm",
      "dist/esm/**",
      "build",
      "coverage",
      ".turbo",
      "scripts",
      "config",
      "src/**/*.test.ts",
      "src/**/*.test.tsx",
      "src/**/*.spec.ts",
      "src/**/*.spec.tsx",
      "src/**/*.stories.ts",
      "src/**/*.stories.tsx",
      "src/**/stories/**"
    ]
}
